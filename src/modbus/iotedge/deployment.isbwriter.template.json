{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": ""           
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0.9",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0.9"
            }
          }
        },
        "modules": {
          "redis": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "redis",
              "createOptions": {}
            }
          },
          "isbwriter": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.ISBWriter}",
              "createOptions": {
                "Env": [
                  "TOPIC=modbus-data"
                ]
              }
            }
          },
          "Modbus": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge/modbus:1.0",
              "createOptions": {}
            }
          },
          "Modbussimulator": {
            "version": "2.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "rdscompany/modbussimulator:2.0",
              "createOptions": {                
                "HostConfig": {                 
                  "PortBindings": {
                    "502/tcp": [
                      {
                        "HostPort": "502"
                      }
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "modbusToISBWriter": "FROM /messages/modules/Modbus/outputs/modbusOutput/* INTO BrokeredEndpoint(\"/modules/isbwriter/inputs/input1\")",
          "ModbussimulatorToIoTHub": "FROM /messages/modules/Modbussimulator/outputs/* INTO $upstream"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    },
    "Modbus": {
      "properties.desired": {
        "PublishInterval": 10000,
        "SlaveConfigs": {
          "Slave01": {
            "HwId": "PowerMeter-0a:01:01:01:01:01",
            "Operations": {
              "Op01": {
                "Count": "2",
                "DisplayName": "Voltage",
                "PollingInterval": "10000",
                "StartAddress": "400001",
                "UnitId": "1"
              }
            },
            "SlaveConnection": "104.214.227.142"
          }
        }
      }
    }
  }
}